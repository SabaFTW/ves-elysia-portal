  "integration": {
    "telegram": {
      "commandPrefix": "/research",
      "commands": [
        {
          "command": "/research list",
          "description": "List all research by field",
          "returns": "Organized list of research items"
        },
        {
          "command": "/research field <field_id>",
          "description": "Show all research in specific field",
          "example": "/research field ai_warfare"
        },
        {
          "command": "/research status <status>",
          "description": "Filter by status: complete|in_progress|research|planned",
          "example": "/research status complete"
        },
        {
          "command": "/research connect <research_id> <journalist_id>",
          "description": "Connect research to journalist for pitch",
          "example": "/research connect r002 1"
        },
        {
          "command": "/research export",
          "description": "Export research data as JSON",
          "returns": "Downloadable research.json file"
        }
      ]
    },
    "graph": {
      "nodeTypes": {
        "researchField": {
