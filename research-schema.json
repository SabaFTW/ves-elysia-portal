        "research": {
          "shape": "diamond",
          "color": "#ffffff",
          "borderWidth": 2,
          "font": { "size": 14 }
        },
        "journalist": {
          "shape": "circle",
          "color": "#00ffff",
          "borderWidth": 2,
          "font": { "size": 14 }
        },
        "topic": {
          "shape": "ellipse",
          "color": "#ff00ff",
          "borderWidth": 1,
          "font": { "size": 12 }
        }
      },
      "edgeTypes": {
