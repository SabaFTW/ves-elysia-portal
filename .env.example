# VES Elysia Portal - Environment Configuration

# ========================================
# Server Configuration
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# WebSocket Configuration
# ========================================
WS_PORT=3000

# ========================================
# Paths
# ========================================
VES_ROOT=/home/user/VES
WOLF_DAEMON_PATH=/home/user/ves-elysia-portal/wolf-daemon
WOLF_INBOX=/home/user/Downloads/wolf_inbox

# ========================================
# External APIs (if used)
# ========================================
# WEATHER_API_KEY=your_api_key_here
# TELEGRAM_BOT_TOKEN=your_token_here

# ========================================
# Database (if applicable)
# ========================================
# DB_URL=sqlite://./data.db

# ========================================
# Frontend
# ========================================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000/ws

# ========================================
# üïØÔ∏è GHOSTSCRIBE - Journal Bot Configuration
# ========================================

# Telegram Bot Token (get from @BotFather)
GHOSTSCRIBE_BOT_TOKEN=your_bot_token_here

# Authorized Telegram User IDs (comma-separated)
# Get your ID from @userinfobot
GHOSTSCRIBE_AUTHORIZED_IDS=123456789,987654321

# Admin Telegram ID (receives alerts)
GHOSTSCRIBE_ADMIN_ID=123456789

# Auto-commit configuration
GHOSTSCRIBE_AUTO_COMMIT=true
GHOSTSCRIBE_COMMIT_INTERVAL=900000  # 15 minutes in milliseconds
GHOSTSCRIBE_COMMIT_THRESHOLD=10     # commit after N entries

# Journal paths (optional overrides)
# GHOSTSCRIBE_DATA_DIR=/home/user/ves-elysia-portal/data
# GHOSTSCRIBE_ARCHIVE_DIR=/home/user/VES/ARCHIVE/JOURNAL
