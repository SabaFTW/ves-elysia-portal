# üê∫ Wolf Daemon Configuration
# Copy this file to .env and fill in your credentials

# Telegram Bot Token (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat ID (get from @userinfobot on Telegram)
# Can be a channel ID (e.g., @your_channel) or numeric ID
TELEGRAM_CHAT_ID=your_chat_id_here

# Watch Directory (default: ~/Downloads/wolf_inbox)
# WATCH_DIRECTORY=~/Downloads/wolf_inbox

# Scan Interval in seconds (default: 10)
# SCAN_INTERVAL=10
